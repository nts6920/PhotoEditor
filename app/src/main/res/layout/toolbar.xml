<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="#212124"
        app:contentInsetStart="0dp"
        android:minHeight="?attr/actionBarSize">

        <ImageView
            android:id="@+id/img_icon_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginVertical="18dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/toolbar_title_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/mulish_semi_bold"
            android:text="@string/editor_photo"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textFontWeight="600"
            android:textSize="@dimen/text18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:layout_marginEnd="9dp"
            android:background="@drawable/custom_background_blue"
            android:clickable="false"
            android:fontFamily="@font/mulish_regular"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="@dimen/text18sp" />

    </androidx.appcompat.widget.Toolbar>
</layout>
