<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#212124">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_widget_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/mulish_semi_bold"
            android:textColor="#FFF"
            android:textSize="@dimen/text18sp"
            tools:text="Sticker" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_remove_all"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/icon_exit" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/tv_widget_name"
            android:layout_toEndOf="@id/ic_remove_all"
            android:paddingVertical="10dp"
            android:src="@drawable/ic_undo" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_done"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@mipmap/ic_blue_tick_1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_redo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/ic_done"
            android:layout_toEndOf="@id/tv_widget_name"
            android:paddingVertical="10dp"
            android:src="@drawable/ic_redo" />

    </RelativeLayout>

</layout>
