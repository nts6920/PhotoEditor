<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1C1C1C"
        android:clickable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            app:layout_constraintBottom_toTopOf="@id/tools"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_brush_size1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingTop="24dp"
                android:src="@drawable/draw_size_8"
                app:layout_constraintBottom_toBottomOf="@id/iv_brush_size7"
                app:layout_constraintEnd_toStartOf="@id/iv_brush_size2"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_brush_size2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:paddingTop="24dp"
                android:src="@drawable/draw_size_15"
                app:layout_constraintBottom_toBottomOf="@id/iv_brush_size7"
                app:layout_constraintEnd_toStartOf="@id/iv_brush_size3"
                app:layout_constraintStart_toEndOf="@id/iv_brush_size1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_brush_size3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:paddingTop="10dp"
                android:src="@drawable/draw_size_21"
                app:layout_constraintBottom_toBottomOf="@id/iv_brush_size7"
                app:layout_constraintEnd_toStartOf="@id/iv_brush_size4"
                app:layout_constraintStart_toEndOf="@id/iv_brush_size2" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_brush_size4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:paddingTop="5dp"
                android:src="@drawable/draw_size_25"
                app:layout_constraintBottom_toBottomOf="@id/iv_brush_size7"
                app:layout_constraintEnd_toStartOf="@id/iv_brush_size5"
                app:layout_constraintStart_toEndOf="@id/iv_brush_size3" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_brush_size5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:src="@drawable/draw_size_33"
                app:layout_constraintBottom_toBottomOf="@id/iv_brush_size7"
                app:layout_constraintEnd_toStartOf="@id/iv_brush_size6"
                app:layout_constraintStart_toEndOf="@id/iv_brush_size4" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_brush_size6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:src="@drawable/draw_size_40"
                app:layout_constraintBottom_toBottomOf="@id/iv_brush_size7"
                app:layout_constraintEnd_toStartOf="@id/iv_brush_size7"
                app:layout_constraintStart_toEndOf="@id/iv_brush_size5" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_brush_size7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:paddingHorizontal="5dp"
                android:paddingEnd="5dp"
                android:src="@drawable/draw_size_46"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_brush_size6" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/tools"
            layout="@layout/bottom_tools"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>